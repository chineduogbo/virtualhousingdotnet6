@model Virtual_Housing.Models.ViewModel.ListingViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="page-heading">
    <div class="container">
      <div class="row">
        <div class="col-lg-8">
          <div class="top-text header-text">
            <h6>Everyone Deserves the Opportunity of Home</h6>
            <h2>But Only You Can Lead Them There</h2>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="contact-page">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="inner-content">
               <div class="row">
        <div class="col-lg-8">
          <div class="top-text header-text">
          
          <h2 style="color: #8d99af"> <b>Create Listing </b> </h2>
          </div>
        </div>
      </div>
            <div class="row">
              <div class="col-lg-3">
                <div id="map">
                    <img src="~/Gif/buildings.gif" height="400px" width="800px" style="padding:inherit" />
                    </div>
              </div>
              <div class="col-lg-9 align-self-center">
                <form id="contact" asp-controller="Listings" asp-action="CreateListing">
                  <div class="row">
                    <div class="col-lg-6">
                      <fieldset>
                        <input type="text"  placeholder="Title" autocomplete="on" required asp-for="createListingDto.Title">
                      </fieldset>
                    </div>
                    <div class="col-lg-6">
                      <fieldset>
                       @* <input type=""  placeholder="State" autocomplete="on" required>
                       *@ 
                       
                         <select class="form-control"  autocomplete="on" required asp-for="@Model.createListingDto.State" 
                         asp-items="@(new SelectList(Model.DropDown.States,"",""))" style="width: 100%;height: 46px;
                          border-radius: 7px;background-color: transparent;border: 1px solid #8d99af;outline: none;
                          font-size: 15px;font-weight: 300;color: #8d99af;padding: 0px 15px;margin-bottom: 30px;">
                            <option>Please select State</option>
                         </select>
                        
                      </fieldset>
                    </div>



                    <div class="col-lg-6">
                      <fieldset>
                        <input type="text"  placeholder="Area Or Popular landmark" autocomplete="on" required asp-for="createListingDto.Area">
                      </fieldset>
                    </div>
                    <div class="col-lg-6">
                      <fieldset>
                       @* <input type=""  placeholder="State" autocomplete="on" required>
                       *@ 
                       
                         <select id="categoryid" class="form-control"  autocomplete="on" required asp-for="@Model.createListingDto.Category" 
                         asp-items="@(new SelectList(Model.DropDown.Category,"",""))" style="width: 100%;height: 46px;
                          border-radius: 7px;background-color: transparent;border: 1px solid #8d99af;outline: none;
                          font-size: 15px;font-weight: 300;color: #8d99af;padding: 0px 15px;margin-bottom: 30px;">
                            <option>Please select Category</option>
                         </select>
                        
                      </fieldset>
                    </div>
                   

                    <div class="col-lg-12">
                      <fieldset>
                        <textarea type="text"   placeholder="Please Provide a detailed Description" required="" asp-for="createListingDto.Description"></textarea> 
                      </fieldset>
                    </div>
                   
                    <div class="col-lg-12">
                      <fieldset>
                        <textarea type="text" class="form-control"  placeholder="Address(This is Optional)" required=""></textarea>  
                      </fieldset>
                    </div>
                     <div class="col-lg-6">
                      <fieldset>
                        <input type="number" min="0" placeholder="Price For Virtual Inspection" autocomplete="on" required asp-for="createListingDto.PricePerEntry">
                      </fieldset>
                    </div>
                     <div class="col-lg-6">
                      <fieldset>
                        <input type="file"  placeholder="Upload Images" autocomplete="on" required asp-for="createListingDto.ImageUrl" multiple>
                      </fieldset>
                    </div>
                    <div class="col-lg-6">
                      <fieldset>
                        <input type="number" min="0" placeholder="Price Range For Property" autocomplete="on" required asp-for="createListingDto.PriceRange">
                      </fieldset>
                    </div>
                    <div class="col-lg-6" id="noofrooms">
                      <fieldset>
                        <input  type="number" min="0" placeholder="No Of Rooms" autocomplete="on" required asp-for="createListingDto.NoOfRooms">
                      </fieldset>
                    </div>
                    <div class="col-lg-6" id="noofbathrooms">
                      <fieldset>
                        <input type="number" min="0" placeholder="No Of Bathrooms" autocomplete="on" required asp-for="createListingDto.NoOfBathrooms">
                      </fieldset>
                    </div>


                    <div class="col-lg-12" style="padding-bottom:40px">
                      <fieldset>
                        <button type="submit" id="form-submit" class="main-button "><i class="fa fa-paper-plane"></i> Create Listing</button>
                      </fieldset>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>



   <script>
document.addEventListener("DOMContentLoaded", function() {
    $("#noofrooms").hide();
    $("#noofbathrooms").hide();

    $('#categoryid').change(
            function () {
                var val1 = $('#categoryid option:selected').val();
                if (val1 == "Rental") {
                    $("#noofrooms").show();
    $("#noofbathrooms").show();
                }
                else {
                    $("#noofrooms").hide();
    $("#noofbathrooms").hide();
                }
            }
        );
});
    </script>